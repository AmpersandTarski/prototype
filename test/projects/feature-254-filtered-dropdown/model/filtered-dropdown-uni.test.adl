CONTEXT FilteredDropdownsTestsUni

REPRESENT UniName TYPE ALPHANUMERIC
REPRESENT UniStatus TYPE ALPHANUMERIC

RELATION uniName[Employee*UniName] [UNI]
RELATION uniStatus[Employee*UniStatus] [UNI]
RELATION projectMemberUni[Project*Employee] [UNI] -- UNI Each project can be related to one employee only

POPULATION uniName[Employee*UniName] CONTAINS
  [ ("m1", "Jan Jansen")
  , ("m2", "Piet Peters")
  , ("m3", "Marie Bakker")
  , ("m4", "Klaas Klaasen")
  , ("m5", "Anna Annasson")
  ]

POPULATION uniStatus[Employee*UniStatus] CONTAINS
  [ ("m1", "eligible")
  , ("m2", "on leave")
  , ("m4", "eligible")
  , ("m3", "fired")
  , ("m5", "eligible")
  ]

POPULATION projectMemberUni[Project*Employee] CONTAINS
  [ ("project 1", "m1")
  ]

-- Desired filtering: eligible employees only
RELATION uniEligibleEmployees[Employee] [PROP]
ENFORCE uniEligibleEmployees := uniStatus;"eligible";uniStatus~ /\ I
-- As a result, uniEligibleEmployees contains [ ("m1","m1"), ("m4","m4"), ("m5","m5")]

-- I want the user to pick project members in the relation `projectMemberUni`, using `uniEligibleEmployees` to select from.

INTERFACE DropdownsUni : "_SESSION"[SESSION]; V[SESSION*Project] cRud BOX<FORM>
  [ "Project ID" : I
  , "Section Header" : TXT "ALL 8 VARIATIONS with the R permission"

  , "Assign an employee (cRud)" : projectMemberUni cRud BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  
  , "Assign an employee (cRUd)" : projectMemberUni cRUd BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  
  , "Assign an employee (cRuD)" : projectMemberUni cRuD BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  
  , "Assign an employee (cRUD)" : projectMemberUni cRUD BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  
  , "Assign an employee (CRud)" : projectMemberUni CRud BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  
  , "Assign an employee (CRUd)" : projectMemberUni CRUd BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  
  , "Assign an employee (CRuD)" : projectMemberUni CRuD BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  
  , "Assign an employee (CRUD)" : projectMemberUni CRUD BOX<FILTEREDDROPDOWN>
  [ select : uniEligibleEmployees ]  

  , "Section Header 2" : TXT "One VARIATION without the R permission"
  , "Note" : TXT "(These result in: object is not readable, but also generate red box)"
  -- , "Assign an employee (crud)" : projectMemberUni crud BOX<FILTEREDDROPDOWN>
  -- [ select : eligibleEmployees ]  

  ]
    

ENDCONTEXT
